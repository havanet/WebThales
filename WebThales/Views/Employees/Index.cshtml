@* @model List<Employee> *@
@using Data.Model;
@model Data.Access.Paged<Data.Model.Employee> 

<!DOCTYPE html>
<html>
<head>
    <title>Employees</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
</head>
<body>
    <div class="container">
        <h1>Employee Information</h1>

        <form method="post" action="/Employees/Index">
            <div class="form-group">
                <label for="employeeSearch">Search Employee by Id</label>
                <input type="number" class="form-control" id="employeeSearch" name="employeeSearch" placeholder="Enter employee Id">
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
        </form>

        @{
            ViewBag.Title = "Employees";
            var employees = Model.Items;
            var totalRecords = Model.TotalItems;
            var currentPage = Model.PageNumber;
            var totalPages = Model.TotalPages;
        }

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Monthly Salary</th>
                    <th>Annual Salary</th>
                    <th>Age</th>
                    <th>Profile Image</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model.Items)
                {
                    <tr>
                        <td>@employee.Id</td>
                        <td>@employee.EmployeeName</td>
                        <td>@employee.EmployeeSalary.ToString("C")</td>
                        <td>@employee.Annualsalary.ToString("C")</td>
                        <td>@employee.EmployeeAge</td>
                        <td>
                            <img src="@employee.ProfileImage" alt="Profile Image" width="50" height="50" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>


        <div>
            <ul class="pagination">
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { initPage = currentPage - 1, records = Model.PageSize })">Previous</a>
                </li>

                @for (var i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(currentPage == i ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { initPage = i, records = Model.PageSize })">@i</a>
                    </li>
                }

                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { initPage = currentPage + 1, records = Model.PageSize })">Next</a>
                </li>
            </ul>
        </div>


    </div>
    <script>
        function disableSubmitButton() {
            document.getElementById("submitButton").disabled = true;
        }
    </script>
</body>
</html>
